<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:backgroundTint="#66FFFFFF"
    android:backgroundTintMode="src_atop">

    <include layout="@layout/titlebar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:height="100dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="serif"
        android:paddingTop="10dp"
        android:text="Yüklemek istediğiniz bakiyeyi seçin.\nMiktar : 0"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <Button
                android:id="@+id/btn1"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="1"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn2"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="8"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn3"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="15"
                android:textSize="40dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <Button
                android:id="@+id/btn4"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="30"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn5"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="50"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn6"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="75"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <Button
                android:id="@+id/btn7"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="100"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn8"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="200"
                android:textSize="40dp" />

            <Button
                android:id="@+id/btn9"
                style="@style/buttonNumberStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_number_violet_shape"
                android:text="300"
                android:textSize="40dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/karta_yukle"
        style="@style/buttonNumberStyle"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_number_violet_shape"
        android:text="KARTA YÜKLE"
        android:textSize="32dp"/>

    <include layout="@layout/footerbar"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:layout_height="48dp"
        android:layout_width="wrap_content" />

</LinearLayout>
